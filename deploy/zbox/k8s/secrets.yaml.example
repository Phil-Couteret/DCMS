# Copy to secrets.yaml and fill in values. Do NOT commit secrets.yaml.
# kubectl create secret generic dcms-secrets -n dcms --from-literal=db-password=CHANGE_ME --from-literal=jwt-secret=CHANGE_ME --dry-run=client -o yaml | kubectl apply -f -
apiVersion: v1
kind: Secret
metadata:
  name: dcms-secrets
  namespace: dcms
type: Opaque
stringData:
  db-password: "CHANGE_ME"      # PostgreSQL password for dcms user
  jwt-secret: "CHANGE_ME"       # JWT signing secret (min 32 chars)
